  <%= form_with model: diary, local: true do |f|%>
    <div class="field">
      <%= f.date_field :date, class:"field" %>
    </div>

    <div class="field">
      <%= f.label :text, "*テキスト(130字以内)" %><br />
      <%= f.text_area :text, id:"diary-text" %>
    </div>

    <div class="field">
      <%= f.label :image, "*写真" %><br />
      <%= f.file_field :image, id:"diary-image" %>
    </div>

    <div class="actions">
      <%= f.submit "保存する", class: :form__btn  %>
    </div>
  <% end %>