<main class="main">
  <div class="inner">
    <div class="diary__wrapper-diary">

       <p class="diary__hedding">
      </p>

      <div class="diary__image">
        <%= image_tag @diary.image %>
      </div>
      <%# if user_signed_in? && current_user.id == @pet.user_id %>
        <div class="diary__manage">
          <%#= link_to "編集する", edit_pet_path(@diary.id), class: :pet__btn %>
          <%#= link_to "削除する", pet_path(@diary.id), method: :delete, class: :pet__btn %>
        </div>
      <%# end %>

      <div class="diary__body">
        <div class="diary-content">
          <div class="diary--content">
            Diary
          </div>
        <div class="diary__detail">
          <p class="diary__title">日付</p>
          <p class="diary__date">
            <%= @diary.date %>
          </p>
        </div>
        <div class="diary__detail">
          <p class="diary__title">日記</p>
          <p class="diary__text">
            <%= @diary.text %>
          </p>
        </div>
        </div>
      </div>
      
    </div>
  </div>
</main>
